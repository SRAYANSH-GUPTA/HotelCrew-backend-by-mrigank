# ──────────────────────────────────────────────────
# HotelCrew Backend — Environment Variables
# Copy this file to .env and fill in real values
# ──────────────────────────────────────────────────

# Django
SECRET_KEY=change-me-to-a-random-secret
DEBUG=False
ALLOWED_HOSTS=api.yourdomain.com,localhost

# PostgreSQL (used by docker-compose)
POSTGRES_DB=hotelcrew
POSTGRES_USER=hotelcrew
POSTGRES_PASSWORD=hotelcrew_secret

# Database URL (auto-generated by docker-compose, set manually for standalone)
DATABASE_URL=postgres://hotelcrew:hotelcrew_secret@localhost:5432/hotelcrew

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Email (Gmail SMTP)
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=

# Firebase
FIREBASE_SERVICE_ACCOUNT_PATH=/path/to/firebase_credentials.json

# Cloudflare Tunnel — MUST include https:// prefix
CSRF_TRUSTED_ORIGINS=https://api.yourdomain.com
